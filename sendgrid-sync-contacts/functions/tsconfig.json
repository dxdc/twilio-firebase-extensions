{
  "compilerOptions": {
    "outDir": "lib",
    "sourceRoot": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports":true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
  },
  "include": ["src"],
  "compileOnSave": true,
  "exclude": ["node_modules"]
  
}
